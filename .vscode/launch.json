{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "简单API调试",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["dev", "--port", "3000"],
      "autoAttachChildProcesses": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "启动Hono API",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vite/bin/vite.js",
      "args": ["--mode", "development"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "调试TS脚本",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "-r", "ts-node/register"
      ],
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true,
      "outFiles": []
    },
    {
      "type": "node",
      "request": "launch",
      "name": "数据库迁移",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": [
        "-r", "ts-node/register"
      ],
      "args": ["${workspaceFolder}/scripts/db-migrate.ts", "${input:migrationType}"],
      "cwd": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "inputs": [
    {
      "id": "migrationType",
      "type": "pickString",
      "description": "选择迁移类型",
      "options": [
        "all",
        "init",
        "users",
        "accounts",
        "login-type",
        "device-accounts",
        "move-login-type-to-devices"
      ],
      "default": "all"
    }
  ]
} 